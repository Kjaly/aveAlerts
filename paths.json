      "@shared": ["./src/libs/shared"],
      "@shared/*": ["./src/libs/shared/*"],
      "@forms": ["./src/libs/forms"],
      "@forms/*": ["./src/libs/forms/*"],
      "@utils/*": ["./src/libs/utils/*"],
      "@models/*": ["./src/libs/models/*"],
      "@variables": ["./src/libs/variables"],
